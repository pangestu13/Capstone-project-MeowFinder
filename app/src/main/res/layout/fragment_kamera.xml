<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Camera.KameraFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/ambil_atau_pilih_foto"
            android:textSize="20dp"
            android:layout_marginTop="22dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/camera"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinslight"
            android:text="Ambil foto hewan dan kami akan mencarikan daskripsi hewan tersebut"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_take_foto"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="@string/take_foto"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:background="@drawable/background_button"
            />

        <Button
            android:id="@+id/btn_take_galeri"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:text="@string/teke_galeri"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>